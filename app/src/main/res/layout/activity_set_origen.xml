<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp">


        <ImageView
            android:id="@+id/crossImgView"
            android:clickable="true"
            android:visibility="visible"
            android:layout_marginLeft="10dp"
            android:background="@drawable/arr_left"
            android:layout_centerVertical="true"
            android:layout_width="35dp"
            android:layout_height="35dp" />

        <TextView
            android:id="@+id/btnForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:maxLines="2"
            android:textColor="@color/black_semi_transparent"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="false"
            android:layout_alignParentTop="false"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:text="Rezago Temporal" />

        <ImageView
            android:id="@+id/regImgView"
            android:clickable="true"
            android:visibility="visible"
            android:layout_alignParentRight="true"
            android:background="@drawable/qr_code_s"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_width="34dp"
            android:layout_height="34dp" />


    </RelativeLayout>

    <View android:id="@id/view_search_divider" android:background="@color/map_info_text_color" android:layout_width="fill_parent"
        android:visibility="visible"
        android:layout_height="0.5dip" />

    <View android:id="@+id/view_search_divider" android:background="@color/materialDarkGrey" android:layout_width="fill_parent"
        android:visibility="gone"
        android:layout_height="0.5dip" />


    <LinearLayout
        android:id="@+id/container23"
        android:layout_width="fill_parent"
        android:clickable="true"
        android:gravity="left|center_vertical"
        android:background="@android:color/white"
        android:layout_height="55dp"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/textcif"
            android:textSize="30sp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/value_10dp"
            android:layout_marginRight="@dimen/value_10dp"
            android:textColor="@color/black_text_color"
            android:autoText="true"
            android:maxLines="2"
            android:gravity="center"
            android:text="Capturar Predio Temporal"
            android:textStyle="normal|bold" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/refer_container2"
        android:layout_width="fill_parent"
        android:clickable="true"
        android:gravity="left|center_vertical"
        android:background="@android:color/white"
        android:layout_height="86dp">

        <TextView
            android:id="@+id/btnGenDir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/btnDeepSelection"
            android:text="Capturar QR"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="150dp"
            android:elevation="1dp"
            android:padding="@dimen/value_15dp"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

    </RelativeLayout>

</LinearLayout>